{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}
    <a href="{{ path('contact_category_new') }}" class="btn btn-success">Ajouter une Catégorie</a>

    <table class="table table-hover table-responsive-sm table-responsive-md mb-4">
		<thead>
			<tr class="table-info">
				<th class="align-middle" scope="col">Nom de la Catégorie</th>
				<th class="align-middle" scope="col" style="width: 10%;">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr class="table-light">
					<td class="align-middle">{{ category.label }}</td>
					<td class="align-middle">
						<ul class="navbar-nav">
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Gérer</a>
								<div class="dropdown-menu">
									<a class="dropdown-item" href="{{ path('contact_category_edit', {'id': category.id}) }}">Modifier la catégorie</a>
									{{ include('contact/category/_delete_form.html.twig') }}
								</div>
							</li>
						</ul>
					</td>
				</tr>
			{% else %}
				<tr>
					<td class="table-warning" colspan="2">Aucune donnée trouvée</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
