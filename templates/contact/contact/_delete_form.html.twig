<form method="post" action="{{ path('contact_contact_delete', {'id': contact.id}) }}" onsubmit="return confirm('ëtes-vous sûr de vouloir supprimer ce contact ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
    <button class="dropdown-item btn btn-sm text-danger">Supprimer</button>
</form>
